<%= form_with(model: tasks, local: true) do |f| %>
    <% if message.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% message.errors.full_messages.each do |tsk| %>
                    <li><%= tsk %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= f.label :tasks, 'タスク' %>
    <%= f.text_field :tasks %>
    
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status %>
    
    <%= f.submit '投稿' %>
<% end %>