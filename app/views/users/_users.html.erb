<% if users.any? %>
  <ul class="list-styled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= garvatar_url(user, { size: 50 })%>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>